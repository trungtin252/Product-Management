extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main
    .container.my-3
        .row
            .col-12
                .box-head
                    +box-head("Danh sách sản phẩm")
        .row
            each item in products
                div.card(style="width: 18rem;")
                    img.card-img-top(src= item.thumbnail, alt= item.title)
                    .card-body
                        h5.card-title #{item.title}
                        div.inner-content
                            h3.inner-title 
                                .inner-price-new #{item.newPrice}
                                .inner-price-old #{item.price}
                                .inner-discount #{item.discountPercentage}%
                        a.btn.btn-primary(href=`/products/${item.slug}`) Chi tiết


        